.jumbotron
	%h1 Tasks
	<a class="btn btn-primary" href="/tasks" role="button">Tasks home »</a>
	<a class="btn btn-primary" href="/tasks/new" role="button">Add a task »</a>
= f.label "Task Name:"
= f.text_field :task_name
= f.label "Description:"
= f.text_field :description
= f.label "Date Due:"
= f.date_select :due_date
= f.label "Completed"
= f.radio_button :done, true
= f.label "To Be Done"
= f.radio_button :done, false
= f.label "Assigned To:"
= f.select :assignee_id, options_for_select(Assignee.uniq.pluck(:id))

= f.submit "Add"


